@model UnitConverter.Models.ConversionModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weight Converter</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <div class="container">
        <div class="header">
            <a href="@Url.Action("Index", "Home")" class="back-link">‚Üê Back to Home</a>
            <h1>Weight Converter</h1>
        </div>
        
        <div class="converter-card">
            <form method="POST" action="@Url.Action("Weight", "Home")">
                <div class="form-group">
                    <label for="Value">Enter Value:</label>
                    <input type="number" id="Value" name="Value" step="any" required 
                           value="@(Model?.Value ?? 0)">
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="FromUnit">From:</label>
                        <select id="FromUnit" name="FromUnit" required>
                            <option value="milligram" selected="@(Model?.FromUnit == "milligram")">Milligram</option>
                            <option value="gram" selected="@(Model?.FromUnit == "gram")">Gram</option>
                            <option value="kilogram" selected="@(Model?.FromUnit == "kilogram")">Kilogram</option>
                            <option value="ounce" selected="@(Model?.FromUnit == "ounce")">Ounce</option>
                            <option value="pound" selected="@(Model?.FromUnit == "pound")">Pound</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="ToUnit">To:</label>
                        <select id="ToUnit" name="ToUnit" required>
                            <option value="milligram" selected="@(Model?.ToUnit == "milligram")">Milligram</option>
                            <option value="gram" selected="@(Model?.ToUnit == "gram")">Gram</option>
                            <option value="kilogram" selected="@(Model?.ToUnit == "kilogram")">Kilogram</option>
                            <option value="ounce" selected="@(Model?.ToUnit == "ounce")">Ounce</option>
                            <option value="pound" selected="@(Model?.ToUnit == "pound")">Pound</option>
                        </select>
                    </div>
                </div>
                
                <button type="submit" class="btn">Convert</button>
            </form>
            
            @if (Model?.ShowResult == true)
            {
                <div class="result">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <p class="error">@Model.ErrorMessage</p>
                    }
                    else
                    {
                        <p class="result-text">
                            <span class="result-value">@Model.Value</span> @Model.FromUnit = 
                            <span class="result-value">@Model.Result.ToString("F6")</span> @Model.ToUnit
                        </p>
                    }
                </div>
            }
        </div>
    </div>
</body>
</html>
