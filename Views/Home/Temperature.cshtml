@model UnitConverter.Models.ConversionModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Localizer["TemperatureConverter"]</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <div class="visitor-counter">
        <div class="counter-item">
            <span class="counter-icon">üë•</span>
            <span class="counter-label">Active:</span>
            <span class="counter-value" id="activeUsers">0</span>
        </div>
        <div class="counter-item">
            <span class="counter-icon">üëÅÔ∏è</span>
            <span class="counter-label">Visits:</span>
            <span class="counter-value" id="totalVisits">0</span>
        </div>
    </div>
    
    <div class="language-switcher">
        <form asp-controller="Home" asp-action="SetLanguage" asp-route-returnUrl="@Context.Request.Path" method="post">
            <button type="submit" name="culture" value="en" class="lang-btn">English</button>
            <button type="submit" name="culture" value="ru" class="lang-btn">–†—É—Å—Å–∫–∏–π</button>
            <button type="submit" name="culture" value="uz" class="lang-btn">O'zbek</button>
        </form>
    </div>
    
    <div class="container">
        <div class="header">
            <a href="@Url.Action("Index", "Home")" class="back-link">@Localizer["BackToHome"]</a>
            <h1>@Localizer["TemperatureConverter"]</h1>
        </div>
        
        <div class="converter-card">
            <form method="POST" action="@Url.Action("Temperature", "Home")">
                <div class="form-group">
                    <label for="Value">@Localizer["EnterValue"]</label>
                    <input type="number" id="Value" name="Value" step="any" required 
                           value="@(Model?.Value ?? 0)">
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="FromUnit">@Localizer["From"]</label>
                        <select id="FromUnit" name="FromUnit" required>
                            <option value="Celsius" selected="@(Model?.FromUnit == "Celsius" || Model?.FromUnit == null)">@Localizer["Celsius"]</option>
                            <option value="Fahrenheit" selected="@(Model?.FromUnit == "Fahrenheit")">@Localizer["Fahrenheit"]</option>
                            <option value="Kelvin" selected="@(Model?.FromUnit == "Kelvin")">@Localizer["Kelvin"]</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="ToUnit">@Localizer["To"]</label>
                        <select id="ToUnit" name="ToUnit" required>
                            <option value="Celsius" selected="@(Model?.ToUnit == "Celsius")">@Localizer["Celsius"]</option>
                            <option value="Fahrenheit" selected="@(Model?.ToUnit == "Fahrenheit" || Model?.ToUnit == null)">@Localizer["Fahrenheit"]</option>
                            <option value="Kelvin" selected="@(Model?.ToUnit == "Kelvin")">@Localizer["Kelvin"]</option>
                        </select>
                    </div>
                </div>
                
                <button type="submit" class="btn">@Localizer["Convert"]</button>
            </form>
            
            @if (Model?.ShowResult == true)
            {
                <div class="result">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <p class="error">@Model.ErrorMessage</p>
                    }
                    else
                    {
                        <p class="result-text">
                            <span class="result-value">@Model.Value</span> @Model.FromUnit = 
                            <span class="result-value">@Model.Result.ToString("F6")</span> @Model.ToUnit
                        </p>
                    }
                </div>
            }
        </div>
    </div>
    
    <script>
        function updateStatistics() {
            fetch('/Home/GetStatistics')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('activeUsers').textContent = data.activeUsers;
                    document.getElementById('totalVisits').textContent = data.totalVisits;
                })
                .catch(error => console.error('Error:', error));
        }
        updateStatistics();
        setInterval(updateStatistics, 5000);
    </script>
</body>
</html>
