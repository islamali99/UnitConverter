@model UnitConverter.Models.ConversionModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Temperature Converter</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <div class="container">
        <div class="header">
            <a href="@Url.Action("Index", "Home")" class="back-link">‚Üê Back to Home</a>
            <h1>Temperature Converter</h1>
        </div>
        
        <div class="converter-card">
            <form method="POST" action="@Url.Action("Temperature", "Home")">
                <div class="form-group">
                    <label for="Value">Enter Value:</label>
                    <input type="number" id="Value" name="Value" step="any" required 
                           value="@(Model?.Value ?? 0)">
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="FromUnit">From:</label>
                        <select id="FromUnit" name="FromUnit" required>
                            <option value="Celsius" selected="@(Model?.FromUnit == "Celsius")">Celsius</option>
                            <option value="Fahrenheit" selected="@(Model?.FromUnit == "Fahrenheit")">Fahrenheit</option>
                            <option value="Kelvin" selected="@(Model?.FromUnit == "Kelvin")">Kelvin</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="ToUnit">To:</label>
                        <select id="ToUnit" name="ToUnit" required>
                            <option value="Celsius" selected="@(Model?.ToUnit == "Celsius")">Celsius</option>
                            <option value="Fahrenheit" selected="@(Model?.ToUnit == "Fahrenheit")">Fahrenheit</option>
                            <option value="Kelvin" selected="@(Model?.ToUnit == "Kelvin")">Kelvin</option>
                        </select>
                    </div>
                </div>
                
                <button type="submit" class="btn">Convert</button>
            </form>
            
            @if (Model?.ShowResult == true)
            {
                <div class="result">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <p class="error">@Model.ErrorMessage</p>
                    }
                    else
                    {
                        <p class="result-text">
                            <span class="result-value">@Model.Value</span> @Model.FromUnit = 
                            <span class="result-value">@Model.Result.ToString("F6")</span> @Model.ToUnit
                        </p>
                    }
                </div>
            }
        </div>
    </div>
</body>
</html>
