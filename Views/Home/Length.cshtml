@model UnitConverter.Models.ConversionModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Localizer["LengthConverter"]</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <div class="visitor-counter">
        <div class="counter-item">
            <span class="counter-icon">üë•</span>
            <span class="counter-label">Active:</span>
            <span class="counter-value" id="activeUsers">0</span>
        </div>
        <div class="counter-item">
            <span class="counter-icon">üëÅÔ∏è</span>
            <span class="counter-label">Visits:</span>
            <span class="counter-value" id="totalVisits">0</span>
        </div>
    </div>
    
    <div class="language-switcher">
        <form asp-controller="Home" asp-action="SetLanguage" method="post">
            <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
            <button type="submit" name="culture" value="en" class="lang-btn">English</button>
            <button type="submit" name="culture" value="ru" class="lang-btn">–†—É—Å—Å–∫–∏–π</button>
            <button type="submit" name="culture" value="uz" class="lang-btn">O'zbek</button>
        </form>
    </div>
    
    <div class="container">
        <div class="header">
            <a href="@Url.Action("Index", "Home")" class="back-link">@Localizer["BackToHome"]</a>
            <h1>@Localizer["LengthConverter"]</h1>
        </div>
        
        <div class="converter-card">
            <form method="POST" action="@Url.Action("Length", "Home")">
                <div class="form-group">
                    <label for="Value">@Localizer["EnterValue"]</label>
                    <input type="number" id="Value" name="Value" step="any" required 
                           value="@(Model?.Value ?? 0)">
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="FromUnit">@Localizer["From"]</label>
                        <select id="FromUnit" name="FromUnit" required>
                            <option value="millimeter" selected="@(Model?.FromUnit == "millimeter")">@Localizer["Millimeter"]</option>
                            <option value="centimeter" selected="@(Model?.FromUnit == "centimeter")">@Localizer["Centimeter"]</option>
                            <option value="meter" selected="@(Model?.FromUnit == "meter" || Model?.FromUnit == null)">@Localizer["Meter"]</option>
                            <option value="kilometer" selected="@(Model?.FromUnit == "kilometer")">@Localizer["Kilometer"]</option>
                            <option value="inch" selected="@(Model?.FromUnit == "inch")">@Localizer["Inch"]</option>
                            <option value="foot" selected="@(Model?.FromUnit == "foot")">@Localizer["Foot"]</option>
                            <option value="yard" selected="@(Model?.FromUnit == "yard")">@Localizer["Yard"]</option>
                            <option value="mile" selected="@(Model?.FromUnit == "mile")">@Localizer["Mile"]</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="ToUnit">@Localizer["To"]</label>
                        <select id="ToUnit" name="ToUnit" required>
                            <option value="millimeter" selected="@(Model?.ToUnit == "millimeter")">@Localizer["Millimeter"]</option>
                            <option value="centimeter" selected="@(Model?.ToUnit == "centimeter")">@Localizer["Centimeter"]</option>
                            <option value="meter" selected="@(Model?.ToUnit == "meter")">@Localizer["Meter"]</option>
                            <option value="kilometer" selected="@(Model?.ToUnit == "kilometer")">@Localizer["Kilometer"]</option>
                            <option value="inch" selected="@(Model?.ToUnit == "inch")">@Localizer["Inch"]</option>
                            <option value="foot" selected="@(Model?.ToUnit == "foot" || Model?.ToUnit == null)">@Localizer["Foot"]</option>
                            <option value="yard" selected="@(Model?.ToUnit == "yard")">@Localizer["Yard"]</option>
                            <option value="mile" selected="@(Model?.ToUnit == "mile")">@Localizer["Mile"]</option>
                        </select>
                    </div>
                </div>
                
                <button type="submit" class="btn">@Localizer["Convert"]</button>
            </form>
            
            @if (Model?.ShowResult == true)
            {
                <div class="result">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <p class="error">@Model.ErrorMessage</p>
                    }
                    else
                    {
                        <p class="result-text">
                            <span class="result-value">@Model.Value</span> @Model.FromUnit = 
                            <span class="result-value">@Model.Result.ToString("F6")</span> @Model.ToUnit
                        </p>
                    }
                </div>
            }
        </div>
    </div>
    
    <script>
        function updateStatistics() {
            fetch('/Home/GetStatistics')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('activeUsers').textContent = data.activeUsers;
                    document.getElementById('totalVisits').textContent = data.totalVisits;
                })
                .catch(error => console.error('Error:', error));
        }
        updateStatistics();
        setInterval(updateStatistics, 5000);
    </script>
</body>
</html>
